<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget37"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
>

    <Button
        android:id="@+id/buttonESC"
        android:layout_marginTop="4dp"         
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/app_esc"
        android:textSize="20sp"
        android:textStyle="bold" >
    </Button>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonESC"
        android:layout_alignLeft="@+id/widgetEnterComment"
        android:layout_alignRight="@+id/TextImageWidth"
        android:layout_alignTop="@+id/buttonESC"
        android:contentDescription="@string/image_name"
        android:src="@drawable/clancy1" >

    </ImageView>

    <EditText
        android:id="@+id/editTextComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_toLeftOf="@+id/buttonPlus"
        android:layout_toRightOf="@+id/widgetEnterComment"
        android:editable="false"
        android:inputType="textCapCharacters"
        android:maxLength="3"
        android:text="@string/violcode"
        android:textSize="28sp"
        android:textColorHighlight="#A6D48D" 
        android:textStyle="bold" >

        <requestFocus>
        </requestFocus>
    </EditText>

    <TextView
        android:layout_marginTop="10dp"    
        android:id="@+id/widgetEnterComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:text="@string/comment"
        android:textColor="#ff000000"
        android:textSize="22sp"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/TextViewDesc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/widgetEnterComment"
        android:layout_below="@+id/editTextComment"
        android:text="@string/desc1"
        android:textColor="#ff000000"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextViewDesc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextViewDesc1"
        android:layout_below="@+id/TextViewDesc1"
        android:text="@string/desc2"
        android:textColor="#ff000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextViewDesc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextViewDesc1"
        android:layout_below="@+id/TextViewDesc2"
        android:text="@string/desc3"
        android:textColor="#ff000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/buttonESC"
        android:layout_below="@+id/TextViewDesc3"
        android:text="@string/enter"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/widgetEnterComment"
        android:layout_alignBottom="@+id/widgetEnterComment"
        android:layout_alignLeft="@+id/buttonEnter"
        android:layout_alignRight="@+id/buttonESC"
        android:padding="5dp"
        android:text="@string/xxxcomment" />

    <ImageButton
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/buttonPrevious"
	    android:layout_alignTop="@+id/buttonEnter"
        android:layout_alignBottom="@+id/buttonEnter"          
		android:src="@drawable/rightarrow" />

    <ImageButton
        android:id="@+id/buttonPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/buttonEnter"
        android:layout_alignBottom="@+id/buttonEnter"          
		android:src="@drawable/leftarrow" />

         <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyBackground="@drawable/key_back1"
        android:keyTextColor="#ff000000"
        android:keyTextSize="30sp"
        android:shadowColor="#ffFFFFFF" />
         
   <TextView
         android:id="@+id/TextImageWidth"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"         
         android:text="@string/image_width"
         android:textColor="#ff000000"
         android:textSize="18sp" 
         android:visibility="invisible"/>

   <Button
       android:id="@+id/buttonPlus"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_alignTop="@+id/TextViewDesc1"
       android:text="@string/plusplus"
       android:textSize="20sp"
       android:textStyle="bold" />

</RelativeLayout>