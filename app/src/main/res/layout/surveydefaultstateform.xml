<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget37"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff" >

    <ImageView
        android:id="@+id/pageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/clancy">
    </ImageView>


    <Button
        android:id="@+id/btnESC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:text="@string/app_esc"
        android:textSize="20sp"
        android:textStyle="bold" >
    </Button>

    <TextView
        android:id="@+id/lblFuncTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pageIcon"
        android:layout_marginTop="5dp"
        android:text="@string/enter_pass_data_title"
        android:textColor="#ff000000"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/lblEnterState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblFuncTitle"
        android:layout_marginTop="70dp"
        android:text="Enter Default State:"
        android:textColor="#ff000000"
        android:textSize="26sp"
        android:textStyle="bold" >
    </TextView>

    <Spinner
        android:id="@+id/spinDefaultState"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/lblEnterState"
        android:layout_alignParentRight="true"
        android:entries="@array/state_array"
        android:background="@android:drawable/btn_dropdown"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/spinDefaultState"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:text="@string/btn_next"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>