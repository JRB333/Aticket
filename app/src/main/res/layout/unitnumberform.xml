<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/widget37"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#ffffffff"
xmlns:android="http://schemas.android.com/apk/res/android" >
 <Button android:id="@+id/buttonESC" android:textSize="20sp" android:textStyle="bold" android:layout_height="wrap_content" android:text="@string/app_esc" android:layout_width="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true"></Button>
 <TextView android:textSize="24sp" android:text="Enter Printer Number:" android:layout_height="wrap_content" android:textStyle="bold" android:id="@+id/widgetEnterUnit" android:textColor="#ff000000" android:layout_width="wrap_content" android:layout_below="@+id/imageView1" android:layout_alignParentLeft="true" android:layout_alignRight="@+id/buttonESC"></TextView>
 <EditText android:textSize="20sp" android:textColorHighlight="#A6D48D" android:textStyle="bold" android:layout_height="wrap_content" android:id="@+id/editTextUnit" android:layout_width="wrap_content" android:layout_below="@+id/widgetEnterUnit" android:layout_alignLeft="@+id/widgetEnterUnit" android:layout_marginTop="16dp" android:layout_alignRight="@+id/buttonESC" android:inputType="textCapCharacters"></EditText>

 <ImageView
     android:id="@+id/imageView1"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignBottom="@+id/buttonESC"
     android:layout_alignLeft="@+id/widgetEnterUnit"
     android:layout_alignRight="@+id/TextImageWidth"
     android:layout_alignTop="@+id/buttonESC"
     android:src="@drawable/clancy1" >

</ImageView>
 <Button android:id="@+id/buttonEnter" android:textSize="20sp" android:textStyle="bold" android:layout_height="wrap_content" android:text="  Enter  " android:layout_width="wrap_content" android:layout_below="@+id/editTextUnit" android:layout_alignRight="@+id/editTextUnit" android:layout_marginTop="16dp"></Button>
 <TextView android:text="From Silver/Black Label" android:textSize="24sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:textColor="#ff000000" android:id="@+id/textView1" android:layout_below="@+id/buttonEnter" android:layout_alignParentLeft="true"></TextView>
     <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyBackground="@drawable/key_back1"
        android:keyTextColor="#ff000000"
        android:keyTextSize="30sp"
        android:shadowColor="#ffFFFFFF" />
 
     <TextView
        android:id="@+id/TextImageWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/image_width"
        android:textColor="#ff000000"
        android:textSize="18sp"
        android:visibility="invisible" />
</RelativeLayout>