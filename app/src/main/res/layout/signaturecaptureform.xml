<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearLayout1"
    android:layout_width="400dp"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:weightSum="1">

    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativearea0"
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/buttonESC"
            android:layout_alignLeft="@+id/widgetEnterstate"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/buttonESC"
            android:contentDescription="@string/image_name"
            android:src="@drawable/clancy1" >
        </ImageView>

        <Button
            android:id="@+id/buttonESC"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:text="@string/app_esc"
            android:textSize="20sp"
            android:textStyle="bold" >
        </Button>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativearea1"
        android:layout_width="fill_parent"
        android:layout_height="300dp">

        <RelativeLayout
            android:id="@+id/buttongroup"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <Button android:id="@+id/savesignature"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Save"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button android:id="@+id/clear"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/savesignature" />
        </RelativeLayout>

        <TextView android:id="@+id/textSpacerNoButtons"
            android:layout_height="40dp"
            android:text=""
            android:maxLength="30"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/buttongroup"
            android:layout_width="wrap_content" />

        <TextView android:id="@+id/textView3"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textSpacerNoButtons"
            android:text="Please Sign Below ..."
            android:textColor="#000000"
            android:textStyle="bold"
            android:maxLength="30"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content" />

        <LinearLayout
            android:id="@+id/capturearea"
            android:layout_height="78dp"
            android:layout_width="383dp"
            android:layout_below="@+id/textView3"
            android:background="@drawable/signatureborder"
            android:layout_weight="0.10" />

        <TextView android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/capturearea"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="To change signatures, re-enter Officer Data Pgm"
            android:textSize="16dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>
</LinearLayout>
