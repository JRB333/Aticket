<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget37"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
 >

    <Button
        android:layout_marginTop="4dp" 
        android:id="@+id/buttonESC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/app_esc" 
        android:textSize="20sp"
        android:textStyle="bold" >
    </Button>

    <TextView
        android:id="@+id/widgetEnterTirestem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:text="@string/stem"
        android:textColor="#ff000000"
        android:textSize="24sp"
		android:layout_marginTop="10dp"        
        android:textStyle="bold" >
    </TextView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonESC"
        android:layout_alignLeft="@+id/widgetEnterTirestem"
        android:layout_alignRight="@+id/TextImageWidth"
        android:layout_alignTop="@+id/buttonESC"
        android:contentDescription="@string/image_name"
        android:src="@drawable/clancy1" >

    </ImageView>

    <EditText
        android:id="@+id/editTextTirestem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/widgetEnterTirestem"
        android:layout_alignRight="@+id/buttonNone"
        android:layout_below="@+id/widgetEnterTirestem"
        android:editable="false"
        android:inputType="number"
        android:maxLength="2"
        android:textSize="28sp"
        android:textColorHighlight="#A6D48D" 
        android:textStyle="bold"
        android:width="120dp" />

    <Button
        android:id="@+id/buttonEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/buttonESC"
        android:layout_below="@+id/editTextTirestem"
        android:layout_marginTop="42dp"
        android:text="@string/enter"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonNone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonEnter"
        android:layout_alignBottom="@+id/buttonEnter"
        android:layout_alignParentLeft="true"
        android:text="@string/none"
        android:textSize="20sp"
        android:textStyle="bold" android:visibility="invisible"/>
    
      <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyBackground="@drawable/key_back1"
        android:keyTextColor="#ff000000"
        android:keyTextSize="30sp"
        android:shadowColor="#ffFFFFFF" />     

         <TextView
         android:id="@+id/TextImageWidth"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"         
         android:text="@string/image_width"
         android:textColor="#ff000000"
         android:textSize="18sp" 
         android:visibility="invisible"/>

</RelativeLayout>